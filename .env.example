# ============================================================================
# Embedding Insights Suite - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# API KEYS
# ============================================================================
# OpenAI API Key (for embeddings and GPT models)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here

# Google Gemini API Key (for AI insights and analysis)
# Get yours at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIzaSy-your-gemini-key-here

# Anthropic Claude API Key (optional)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Serprobot API Key (for SERP data)
# Get yours at: https://serprobot.com/
SERPROBOT_API_KEY=your-serprobot-key-here

# ============================================================================
# GOOGLE OAUTH (Optional - for GSC and Analytics integration)
# ============================================================================
# These are handled per-project in workspace/projects/{project}/oauth/
# No need to set global OAuth credentials here unless using shared auth

# ============================================================================
# STREAMLIT CONFIGURATION
# ============================================================================
# Streamlit server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Theme (optional)
STREAMLIT_THEME_PRIMARY_COLOR=#FF4B4B
STREAMLIT_THEME_BACKGROUND_COLOR=#FFFFFF
STREAMLIT_THEME_SECONDARY_BACKGROUND_COLOR=#F0F2F6
STREAMLIT_THEME_TEXT_COLOR=#262730

# ============================================================================
# DOMAIN CONFIGURATION (for production deployment)
# ============================================================================
# Your actual domain names for each app
DOMAIN_GSC_INSIGHTS=gsc.yourdomain.com
DOMAIN_CONTENT_ANALYZER=content.yourdomain.com
DOMAIN_LINKING_OPTIMIZER=linking.yourdomain.com

# Default domain for redirect
DEFAULT_DOMAIN=gsc.yourdomain.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# DuckDB is file-based, no credentials needed
# Path is handled by ProjectManager

# ============================================================================
# EMBEDDING MODELS
# ============================================================================
# Default embedding model to use
EMBEDDING_MODEL=paraphrase-multilingual-MiniLM-L12-v2

# FAISS index type (optional)
FAISS_INDEX_TYPE=Flat
# Options: Flat, IVFFlat, HNSW

# ============================================================================
# NLP CONFIGURATION
# ============================================================================
# spaCy model to use
SPACY_MODEL=en_core_web_sm
# Options: en_core_web_sm, en_core_web_md, en_core_web_lg

# Lemmatization (true/false)
ENABLE_LEMMATIZATION=true

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
# Maximum workers for parallel processing
MAX_WORKERS=4

# Cache TTL in seconds (for embeddings)
CACHE_TTL=86400

# Batch size for embedding generation
EMBEDDING_BATCH_SIZE=32

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Log file path (relative to app root)
LOG_FILE=/app/logs/app.log

# ============================================================================
# SECURITY
# ============================================================================
# Secret key for encryption (auto-generated per project)
# This is just a fallback, each project has its own encryption key
# ENCRYPTION_FALLBACK_KEY=your-random-32-byte-key-here

# CORS settings (if needed for API integrations)
ALLOWED_ORIGINS=*

# ============================================================================
# GUNICORN SETTINGS (Production server)
# ============================================================================
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=120
GUNICORN_KEEPALIVE=5

# ============================================================================
# DEVELOPMENT vs PRODUCTION
# ============================================================================
ENVIRONMENT=production
# Options: development, production

# Debug mode (only for development)
DEBUG=false

# ============================================================================
# FILE UPLOAD LIMITS
# ============================================================================
# Maximum file size for uploads (in MB)
MAX_UPLOAD_SIZE=100

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
# Auto-backup enabled
AUTO_BACKUP=true

# Backup frequency
BACKUP_FREQUENCY=weekly
# Options: daily, weekly, monthly

# Maximum backups to keep
MAX_BACKUPS=10

# ============================================================================
# MONITORING (Optional - for production)
# ============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here

# Application Insights key (optional)
# APPINSIGHTS_INSTRUMENTATIONKEY=your-key-here

# ============================================================================
# DOCKER SPECIFIC
# ============================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=embedding-insights-suite

# Timezone
TZ=UTC
# Or your local timezone, e.g., Europe/Madrid, America/New_York

# ============================================================================
# NOTES
# ============================================================================
# 1. Copy this file to .env before deployment
# 2. Fill in your actual API keys and credentials
# 3. NEVER commit .env to git (it's in .gitignore)
# 4. For production, use secure methods to inject env vars
# 5. Each project can override API keys in its oauth/ directory
# 6. Persistent volumes ensure /workspace data survives container restarts
